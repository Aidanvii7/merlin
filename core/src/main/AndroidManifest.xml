<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.novoda.merlin">

  <!--using targetSdkVersion=18 to get Robolectric work, but for an APK it will be overridden by build.gradle anyway-->
  <uses-sdk
    android:targetSdkVersion="18" />

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application>

    <!-- SERVICE -->

    <service
      android:exported="false"
      android:name="com.novoda.merlin.service.MerlinService" />

    <!-- RECEIVER -->

    <receiver android:name="com.novoda.merlin.receiver.ConnectivityReceiver">
      <intent-filter>
        <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
      </intent-filter>
    </receiver>

  </application>

</manifest>